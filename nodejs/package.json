{
  "name": "nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "start-development-server": "rm -rf types && concurrently -k -p \"[{name}]\" -n \"Typescript, Node\" -c \"yellow.bold, cyan.bold, green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon ./dist/server.js",
    "build": "npm run clean && npm run build-ts",
    "clean": "rimraf ./dist",
    "build-ts": "tsc",
    "serve": "node -r dotenv/config ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "type": "module",
  "author": "Prajwal Haniya",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.22",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
},
"devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.0",
    "typescript": "^5.8.3"
  }
}
